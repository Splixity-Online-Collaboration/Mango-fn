window "Counter Example" 600 400 "icon.png" {
	column {
		id: mainColumn

		text "Count: 0" {
			id: counterText
			fontsize: 24
		}

		row {
      id: test

      button "Increment counter" {
        onclick -> {
          set(label, counterText, "Count: 1")
        }
      }

      button "Reset counter" {
        onclick -> {
          set(label, counterText, "Count: 0")
        }
      }
		}
	}
}