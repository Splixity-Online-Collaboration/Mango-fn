window "Flexbox Test" 400 600 "icon.png" {
    // Flexbox with flex-direction row (wrap is optional, decides whether to wrap the items or not)
    row wrap {
        width: fill // fill is default, accepts pixels / percentages (100% is equivalent to fill)
        height: hug // hug is default, accepts pixels / percentages

        justify: between // default, accepts between, around, start, end
        align: center    // default, accepts top, bottom, center
        margin: 10       // default is 0, not following HTML's stupid default margin
        gap: 5           // default is 0, gap between items
        overflow: clip   // accepts clip, visible (default), and scroll

        // Elements (example)
        
        textbox "Type something..."
        button "submit" {
            onclick -> {
                ...
            }
            // OR
            onclick: onButtonClick
        }
    }

    onButtonClick: -> {
        ...
    }

    // Flexbox with default fill-width, justify: between, align: center as flex-direction column
    column {
        width: hug   // hug is default, accepts pixels / percentages
        height: fill // fill is default, accepts pixels / percentages (100% is equivalent to fill)

        justify: start // default, accepts between, around, start, end
        align: left    // default, accepts left, right, center
        margin: 10     // default is 0
        gap: 5         // default is 0

        overflow: visible // explicitly declared, even though itâ€™s default
        wrap              // wrap items, false by default        

        // Elements (example)

        text xl "Your Todo-list" // instead of using header like h1, always use text with prefix xs, s, m, l, xl, or use the fontsize prop inside {}
        
        // 1, A, a, I, i (possible list types)
        list "1" {
            text "Buy groceries"
            text "Do paperwork"
            text "Relax"
        }
    }
}